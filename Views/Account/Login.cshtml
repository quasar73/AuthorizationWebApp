@model AuthorizationWebApp.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutWithoutLogout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>

    <h4>Login page</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="LogIn" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>

    <form class="form-inline" asp-controller="account" asp-action="register" method="get">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Register</button>
    </form>
</body>
</html>
